<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.citronours.decopapier" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.citronours.decopapier.ChapterListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.citronours.decopapier.ChapterDetailActivity"
            android:label="@string/title_chapter_detail"
            android:parentActivityName="fr.citronours.decopapier.ChapterListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.citronours.decopapier.ChapterListActivity" />
        </activity>
    </application>

</manifest>
